    <script>
        function startPrank() {
            // Aktivizon Fullscreen
            if (document.documentElement.requestFullscreen) {
                document.documentElement.requestFullscreen();
            }

            // Aktivizon tingullin
            document.getElementById('scarySound').play();
            
            // Shfaq informacionet e sistemit
            document.getElementById('user-info').classList.remove('hidden');
            document.getElementById('warning').classList.remove('hidden');
            document.getElementById('os').innerText = navigator.platform + " (" + navigator.userAgent.slice(0,20) + "...)";
            
            // Merr IP-në (Fake/Real fetch)
            fetch('https://api.ipify.org?format=json')
                .then(res => res.json())
                .then(data => document.getElementById('ip').innerText = data.ip);

            // Efekti i overlay-it të kuq
            setInterval(() => {
                let ov = document.getElementById('overlay');
                ov.style.display = ov.style.display === 'none' ? 'block' : 'none';
            }, 100);

            // Përqindja fake
            let percent = 0;
            let interval = setInterval(() => {
                percent++;
                document.getElementById('timer').innerText = "SHKARKIMI: " + percent + "%";
                if (percent >= 100) {
                    clearInterval(interval);
                    alert("HIEROGLYPH VIRUS INSTALLED SUCCESSFULLY. BYE BYE :)");
                }
            }, 150);
        }

        // Parandalon mbylljen e lehtë (jo gjithmonë punon në të gjithë browserat)
        window.onbeforeunload = function() {
            return "A je e sigurt që do të ikësh? Virusi do të fshijë çdo gjë!";
        };
    </script>
